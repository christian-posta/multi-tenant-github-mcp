# GitHub OAuth Configuration
# Get these from: https://github.com/settings/developers

# OAuth Client ID (for future OAuth flow implementation)
GITHUB_CLIENT_ID=Ov23liBEVSMwAkK39bsE

# OAuth Client Secret (not used in device code flow, but kept for reference)
GITHUB_CLIENT_SECRET=your_client_secret_here

# OAuth Access Token (obtained via device code flow)
# Run ./get_oauth_token.sh to obtain this token
GITHUB_OAUTH_TOKEN=your_oauth_access_token_here

# Custom GitHub API URL (for gateway routing)
# Default: https://api.github.com
GITHUB_API_URL=https://api.github.com

# Insecure mode - skip token authentication (for gateway that injects auth)
# Set to true/1/yes to enable, false/0/no to disable
# Default: false
INSECURE=false

# Access Token File - enable reading GitHub token from access.token file
# Set to true/1/yes to enable, false/0/no to disable
# Default: false (filesystem access disabled by default for security)
ACCESS_TOKEN_FILE_ENABLED=false
